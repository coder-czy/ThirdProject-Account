.search{
  background-color: #87CEFA;
  padding: 20rpx;
  color: #444
}
.date-box{
  width: calc(100% - 220rpx);
  height: 60rpx;
  background-color: #fff;
  margin-right: 20rpx;
  border-radius: 30rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}

.condition{
  width: 160rpx;
  height: 60rpx;
  font-size: 28rpx;
  background-color: #fff;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}

.picker-box{
  height: 60rpx;
}

.tag{
  padding: 20rpx;
  background-color: #fff;
}

.tag-item{
  width: 50%;
  height: 100rpx;
  position: relative;
}

.tag-content{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border: 3rpx solid transparent;
  padding: 10rpx;
  text-align: center;
  border-radius: 10rpx;
  padding: 0 30rpx;
}

.bc-shouru{
  border-color: #e4393c;
}

.bc-zhichu{
  border-color: #00B26A;
}

.t{
  height: 38rpx;
  line-height: 38rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.title{
  color: #444;
}

.shouru{
  color: #e4393c;
}

.zhichu{
  color: #00B26A;
}

.pie{
  height: 620rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.list{
  margin-top: 20rpx;
  background-color: #fff;
}

.item{
  padding: 20rpx;
  height: 80rpx;
}

.item:not(:last-child){
  border-bottom: 1rpx solid #e8e8e8;
}

.item-icon{
  width: 80rpx;
  height: 80rpx;
  background-color: #e8e8e8;
  border-radius: 50%;
}

.arrow{
  width: 28rpx;
  height: 28rpx;
  margin-top: 26rpx;
}

.arrow-img{
  height: 28rpx;
}

.item-content{
  width: calc(100% - 148rpx);
  padding: 0 20rpx;
}
.text{
  height: 40rpx;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 40rpx
}

.type{
  color: #444;
}

.progress{
  height: 40rpx;
}

.count{
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
  width: 100rpx;
  text-align: right;
}

.progress-box{
  width: calc(100% - 100rpx);
  height: 20rpx;
  margin-top: 10rpx;
  background-color: #e8e8e8;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-active{
  height: 100%;
  width: 0;
  transition: width .3s linear;
}

.item-img{
  height: 80rpx;
}
