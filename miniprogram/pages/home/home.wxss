.month-box{
  background-color: #87CEFA;
  padding: 60rpx;
  color: #fff;
  font-size: 32rpx
}
.money{
  font-size: 64rpx;
  font-weight: bold
}
.decimal{
  font-size: 42rpx;
}
.shouru-zhichu{
  height: 60rpx;
  margin-top: 40rpx;
  line-height: 60rpx;
  position: relative;
}
.m{
  margin-right: 10rpx;

}
.line{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  height: 40rpx;
  width: 1px;
  background-color: #eee;
}
.data-box{
  height: 80rpx;
  background-color: #fff;
  font-size: 24rpx;
  color: #999;
  padding-left:10rpx; 
}
.d{
  margin-right: 20rpx;
  line-height: 80rpx;

}
.point{
  width: 60rpx;
  height: 8rpx;
  margin-top: 35rpx;
  position: relative;
  margin-right: 20rpx; 
}
.point-item{
  width: 10rpx;
  height: 10rpx;
  background-color: #666;
  border-radius: 50%;
  margin: 0 5rpx;
}
.point-box{
  position: relative;
  z-index: 1;
}
.picker-box{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}
.picker{
  opacity: 0;
}
.list{
  background-color: #fff;
}
.list-item{
  padding: 20rpx;
}
.list-item-img{
  width: 80rpx;
  height: 80rpx;
  background-color: #ddd;
  border-radius: 50%;
}
.list-icon{
  height: 80rpx;
}
.list-info{
  margin-left: 14rpx;
  height: 80rpx;
  padding: 10rpx 0 10rox 20rpx;
  width: calc(100% - 100rpx);
  border-bottom: 1rpx solid #e8e8e8
}
.list-item-money{
  font-size: 28rpx;
  font-weight: bold;
  line-height: 80rpx;
}
.list-item-money.shouru{
  color: #e4393c;
}
.list-item-money.zhichu{
  color: #00b26a;
}
.list-item-describe{
  color: #666;
  font-size: 22rpx;
}
.top-text{
  height: 50rpx;
}
.comment{
  height: 30rpx;
  line-height: 30rpx
  
}
.type{
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 40rpx;
}
.not-comment{
